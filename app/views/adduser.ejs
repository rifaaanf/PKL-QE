<form id="form-add" action="" method="post" class="w-full max-w-sm">
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label
        class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
        for="inline-full-name"
      >
        Username
      </label>
    </div>
    <div class="relative md:w-2/3">
      <input
        name="username"
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
        id="username"
        placeholder="Masukkan Username"
        type="text"
        required
      >

    </input>
      
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label
        class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
        for="inline-password"
      >
        Password
      </label>
    </div>
    <div class="relative md:w-2/3">
      <input
        name="password"
        id="password"
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
        type="password"
        placeholder="Masukkan Password"
        required
      />
    </div>
  </div>
    <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label
        class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
        for="inline-password"
      >
        Nama
      </label>
    </div>
    <div class="relative md:w-2/3">
      <input
        name="name"
        id="name"
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
        type="text"
        placeholder="Masukkan Nama"
        required
      />
    </div>
  </div>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label
        class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
        for="inline-password"
      >
        Role
      </label>
    </div>
    <div class="relative md:w-2/3">
      <select
        name="roles"
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
        id="roles"

        type="text"
        required
      >
        <option value=""disabled selected hidden>Pilih Jenis</option>
        <option value="admin">Admin</option>
        <option value="proposer">Proposer</option>
        <option value="designer">Designer</option>
        <option value="approver">Approver</option>
        <option value="executor">Executor</option>
      </select>
      <div
        class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
      >
        <svg
          class="fill-current h-4 w-4"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
        >
          <path
            d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
          />
        </svg>
      </div>
    </div>
  </div>


  <div class="md:flex md:items-center mb-1">
    <div class="md:w-1/3"></div>
  </div>
  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
      <input
        id="add-btn"
        class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
        type="submit"
      ></input>
    </div>
  </div>
</form>
<script>
  const form = document.getElementById("form-add");
  const btn = document.getElementById("add-btn");
  
  
    // ajax request
  form.addEventListener("submit", (e) => {
    const select1 = document.getElementById('name').value
    const select3 = document.getElementById('roles').value
    e.preventDefault();
    const data = new FormData(form);
    const xhr = new XMLHttpRequest();
    xhr.open("POST", "/adduser");
    xhr.onload = () => {
      if (xhr.status === 200) {
        Swal.fire({
        title: "Add " + select1,
        text: select1 + " Berhasil Ditambahkan " + " Menjadi "+select3 ,
        icon: "success",
    }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/adduser";
      }
    })
        
      } else {
        Swal.fire({
        title: "Add " + select1,
        text: select1 + " Gagal Ditambahkan " + " Menjadi "+select3 ,
        icon: "error",
      }).then((result) => {
      if (result.isConfirmed) {
        window.location.href = "/adduser";
      }
    })
      }
    };
    xhr.send(data);


});


</script>
