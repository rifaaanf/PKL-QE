  // make doughnut chart for proposal get all proposal with status APPROVED and else
  const chart = () => {
    fetch("/proposal")
      .then((res) => res.json())
      .then((data) => {
        let submitted = 0;
        let needapproval = 0;
        let approved = 0;
        let rejected = 0;
        let redesign = 0;
        let installation = 0;
        let closed = 0;
        data.forEach((proposal) => {
          if (
            !proposal.design &&
            !proposal.rab &&
            proposal.status == "SUBMITTED"
          ) {
            submitted++;
