          } else if (proposal.status === "REJECTED") {
            rejected++;
          } else if (proposal.status === "REDESIGN") {
            redesign++;
          } else if (proposal.status === "INSTALLATION") {
            installation++;
          } else if (proposal.status === "CLOSED") {
            closed++;
          }
        });
