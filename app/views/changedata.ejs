<div class="max-w-7xl bg-white rounded-lg overflow-hidden shadow-md">
<form id="formedit" action="" method="post" class="w-full p-6">
  <div class="md:items-center mb-6">
    <div class="md:w-1/3">
      <label
        class="block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4"
        for="inline-full-name"
      >
        Jenis
      </label>
    </div>
    <div class="relative md:min-w-max z-10">
      <select
        name="jenis"
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
        id="sel1"
        onchange="changedata()"
        type="text"
        required
      >
        <option value="" disabled selected hidden>Pilih Jenis</option>
        <option value="Nama STO">Nama STO</option>
        <option value="Segmen">Segmen</option>
        <option value="Nama Alpro">Nama Alpro</option>
        <option value="Jenis QE">Jenis QE</option>
        <option value="Mitra">Mitra</option>
      </select>
      
    </div>
  </div>
  <div class="md:items-center mb-6">
    <div class="md:w-1/3">
      <label
        class="block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4"
        for="inline-password"
      >
        Data Lama
      </label>
    </div>
    <div class="relative md:min-w-max z-10">
      <select
        name="name"
        class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
        id="pilihdata"
        type="text"
        required
      > 
        <option value=""disabled selected hidden>Choose Data</option>
        



      </select>
      
    </div>
  </div>
  <div class="md:items-center mb-6">
    <div class="md:w-1/3">
      <label
        class="block text-gray-500 font-bold md:text-left mb-1 md:mb-0 pr-4"
        for="inline-password"
      >
        Data Baru
      </label>
    </div>
    <div class="relative md:min-w-max z-10">
      <input name="namebaru" id="sel3" class="bg-white appearance-none border-2 border-gray-300 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" type="text" required placeholder="Input Data Baru">
      <div
        class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
      >
        
      </div>
    </div>
  </div>
  
  <div class="md:flex md:items-center mb-1">
    <div class="md:w-1/3"></div>
  </div>
  <div class="md:items-end">
    <div class="md:flex md:w-full justify-end">
      <input
        id="change-btn"
        class="shadow-lg bg-green-500 hover:bg-white hover:text-green-500 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" style="outline-style: solid; outline-color: #39b846; outline-width: 2px;"
        type="submit"
        
      >
        
    </input>
    </div>
  </div>
</form>
</div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
  
  const form = document.getElementById('formedit');
  const btn = document.getElementById('change-btn');

      $('#pilihdata').select2(
      {
        placeholder: 'Choose Data',
        allowClear: true
      }
    );

          $('#sel1').select2(
      {
        placeholder: 'Pilih Jenis',
        allowClear: true
      }
    );

  

  form.addEventListener('submit', (e) => {
    const select1 = document.getElementById('sel1').value
    const select2 = document.getElementById('pilihdata').value
    const select3 = document.getElementById('sel3').value
    e.preventDefault()
    const data = new FormData(form);
    const xhr = new XMLHttpRequest();
        if (select1 === "" || select2 === "" || select3 === "") {
        Swal.fire({
            title: "Error",
            text: "All Fields Must Be Filled In!",
            icon: "error",
        });
        return;
    }
    xhr.open('POST', '/changedata');
    xhr.onload = () => {
      if (xhr.status === 200) {
        Swal.fire({
          title: 'Changed!',
          text: select1 + ' Has Been Successfully Changed from ' + select2 + " To " + select3,
          icon: 'success',
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = '/changedata';
          }
        });

      } else {
        Swal.fire({
          title: "Error",
          text: "Failed to Change Data",
          icon: "error",
        }).then((result) => {
          if (result.isConfirmed) {
            window.location.href = '/changedata';
          }
        });
      }
    }
    xhr.send(data)
  })


</script>
